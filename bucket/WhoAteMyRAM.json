{
    "version": "1.0.5",
    "description": "A command-line tool for memory usage statistics.",
    "homepage": "https://github.com/AkariiinMKII/WhoAteMyRAM",
    "license": "MIT",
    "notes": [
        "Run following command to import WhoAteMyRAM automatically in Powershell:",
        "$dir\\add-profile-content.ps1"
    ],
    "url": "https://github.com/AkariiinMKII/WhoAteMyRAM/archive/v1.0.5.zip",
    "hash": "801c257fadffc03018e07bd6effae53c3a2d41eccff8b140d40dc0f83ccc4de2",
    "extract_dir": "WhoAteMyRAM-1.0.5",
    "psmodule": {
        "name": "WhoAteMyRAM"
    },
    "post_install": [
        "Remove-Item \"$dir\\LICENSE\", \"$dir\\README.md\" -Force -Recurse -ErrorAction SilentlyContinue",
        "Import-Module WhoAteMyRAM",
        "$BucketDir = Find-BucketDirectory -Root -Name Scoop4kariiin",
        "$Scoop4kariiinUtilsPath = Join-Path -Path $BucketDir -ChildPath \"scripts\\Scoop4kariiinUtils.psm1\"",
        "if (Test-Path $Scoop4kariiinUtilsPath) {",
        "    Import-Module $Scoop4kariiinUtilsPath",
        "    New-ProfileModifier -Type module -Name WhoAteMyRAM -BucketDir $BucketDir",
        "    Remove-Module Scoop4kariiinUtils",
        "} else {",
        "    Write-Host 'Missing files, please update scoop buckets and reinstall the manifest.' -ForegroundColor Red",
        "}"
    ],
    "pre_uninstall": [
        "if (($cmd -eq 'uninstall') -and (Test-Path \"$dir\\remove-profile-content.ps1\")) {",
        "    & \"$dir\\remove-profile-content.ps1\"",
        "}"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/AkariiinMKII/WhoAteMyRAM/tags",
        "regex": "tags/v([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/AkariiinMKII/WhoAteMyRAM/archive/v$version.zip",
        "extract_dir": "WhoAteMyRAM-$version"
    }
}
