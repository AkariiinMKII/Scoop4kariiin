{
    "version": "1.0.2",
    "description": "A command-line tool for memory usage statistics.",
    "homepage": "https://github.com/AkariiinMKII/WhoAteMyRAM",
    "license": "MIT",
    "notes": [
        "Run following command to import WhoAteMyRAM automatically in Powershell:",
        "$dir\\append-to-profile.ps1"
    ],
    "url": "https://github.com/AkariiinMKII/WhoAteMyRAM/archive/v1.0.2.zip",
    "hash": "51859a9b7841be15a50c4688735abd67048f8a67e28a427efc5e5e2c3d10bd32",
    "extract_dir": "WhoAteMyRAM-1.0.2",
    "psmodule": {
        "name": "WhoAteMyRAM"
    },
    "post_install": [
        "Remove-Item \"$dir\\LICENSE\", \"$dir\\README.md\" -Force -Recurse -ErrorAction SilentlyContinue",
        "Import-Module WhoAteMyRAM",
        "$ScriptsDir = $(Join-Path $(Find-BucketDirectory -Root -Name Scoop4kariiin) scripts/WhoAteMyRAM)",
        "$ModifierPath = $(Join-Path $(Find-BucketDirectory -Root -Name Scoop4kariiin) scripts/ModifyPSProfile.psm1)",
        "'append-to-profile.ps1', 'remove-from-profile.ps1' | ForEach-Object {",
        "    if ((Test-Path \"$ScriptsDir\\$_\") -and (Test-Path \"$ModifierPath\")) {",
        "        Copy-Item \"$ScriptsDir\\$_\" \"$dir\\\"",
        "        $Content = (Get-Content \"$dir\\$_\").Replace('$ModifyPSProfile', \"$ModifierPath\")",
        "        $content | Set-Content -Path \"$dir\\$_\"",
        "    } else {",
        "        Write-Host 'Missing files, please update scoop buckets and reinstall this module again' -ForegroundColor Red",
        "    }",
        "}"
    ],
    "pre_uninstall": [
        "if (($cmd -eq 'uninstall') -and (Test-Path \"$dir\\remove-from-profile.ps1\")) {",
        "    & \"$dir\\remove-from-profile.ps1\"",
        "}"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/AkariiinMKII/WhoAteMyRAM/tags",
        "regex": "tags/v([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/AkariiinMKII/WhoAteMyRAM/archive/v$version.zip",
        "extract_dir": "WhoAteMyRAM-$version"
    }
}
